@page "/settings"

<PageTitle>Settings</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Settings</MudText>

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Account Management</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>Be careful, these actions are destructive.</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="async () => await DeleteAccount()">Delete Account</MudButton>
    </MudCardActions>
</MudCard>
